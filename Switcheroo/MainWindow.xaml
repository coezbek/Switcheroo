<Window x:Class="Switcheroo.MainWindow" WindowStartupLocation="Manual" Topmost="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Switcheroo"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:core="clr-namespace:Switcheroo;assembly=Switcheroo.Core"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        Closing="OnClose" ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True"
        SizeToContent="Manual"
        Title="" MinWidth="750" Deactivated="MainWindow_OnLostFocus" Loaded="MainWindow_OnLoaded"
        BorderBrush="Transparent" BorderThickness="1"
        Background="Transparent" KeyDown="MainWindow_KeyDown"
        PreviewMouseWheel="MainWindow_PreviewMouseWheel"
        UseLayoutRounding="True"
        >
    
    <Window.Effect>
        <DropShadowEffect Color="Gray" BlurRadius="5" Direction="-90" ShadowDepth="0"/>
    </Window.Effect>

    <Window.CommandBindings>
        <CommandBinding Command="local:MainWindow.CloseWindowCommand"
                        Executed="CloseWindow" />
        <CommandBinding Command="local:MainWindow.SwitchToWindowCommand"
                        Executed="OnEnterPressed" />
        <CommandBinding Command="local:MainWindow.CloseColumnCommand"
                        Executed="CloseColumn" />
        <CommandBinding Command="local:MainWindow.ScrollListUpCommand"
                        Executed="ScrollListUp" />
        <CommandBinding Command="local:MainWindow.ScrollListDownCommand"
                        Executed="ScrollListDown" />
        <CommandBinding Command="local:MainWindow.DismissCommand"
                        Executed="DismissWindow" />
        <CommandBinding Command="local:MainWindow.StartExplorerCommand"
                        Executed="StartExplorer" />
        <CommandBinding Command="local:MainWindow.StartNewInstanceCommand"
                        Executed="StartNewInstance" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Command="local:MainWindow.CloseWindowCommand" Key="W" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.CloseWindowCommand" Key="W" Modifiers="Ctrl" />
        <KeyBinding Command="local:MainWindow.CloseWindowCommand" Key="X" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.CloseColumnCommand" Key="W" Modifiers="Shift+Alt" />
        <KeyBinding Command="local:MainWindow.CloseColumnCommand" Key="X" Modifiers="Shift+Alt" />
        <KeyBinding Command="local:MainWindow.ScrollListUpCommand" Key="Up" />
        <KeyBinding Command="local:MainWindow.ScrollListDownCommand" Key="Down" />
        <KeyBinding Command="local:MainWindow.ScrollListUpCommand" Key="K" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.ScrollListDownCommand" Key="J" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.ScrollListUpCommand" Key="Up" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.ScrollListDownCommand" Key="Down" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.DismissCommand" Key="Q" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.DismissCommand" Key="Escape" />
        <KeyBinding Command="local:MainWindow.StartExplorerCommand" Key="E" Modifiers="Alt" />
        <KeyBinding Command="local:MainWindow.StartNewInstanceCommand" Key="N" Modifiers="Alt" />
    </Window.InputBindings>

    <Window.Resources>
        <local:WindowHandleToIconConverter x:Key="WindowHandleToIconConverter" />
        <local:WindowHandleToCachedIconConverter x:Key="WindowHandleToCachedIconConverter" />
    </Window.Resources>

    <Border CornerRadius="5" Padding="3" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="0" Name="Border" Margin="15,15,15,15">
        <DockPanel LastChildFill="True">
            <DockPanel Margin="4,0,4,0" Name="HelpPanel" Background="Transparent" Height="0" DockPanel.Dock="Top">
                <TextBlock FontSize="10" DockPanel.Dock="Left" Foreground="{DynamicResource PrimaryTextBrush}">
                    type to search
                </TextBlock>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <TextBlock FontSize="10" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryTextBrush}">
                        <TextBlock.ToolTip>
                            <TextBlock>Press <Bold>tab</Bold> or <Bold>â†‘â†“</Bold> to navigate in the list</TextBlock>
                        </TextBlock.ToolTip>
                        <Bold>tab</Bold> or <Bold>â†‘â†“</Bold> to navigate
                    </TextBlock>
                    <TextBlock FontSize="10" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryTextBrush}">
                        <TextBlock.ToolTip>
                            <TextBlock>Press <Bold>enter</Bold> to open the highlighted window</TextBlock>
                        </TextBlock.ToolTip>
                        <Bold>enter</Bold> to open a window
                    </TextBlock>
                    <TextBlock FontSize="10" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryTextBrush}">
                        <TextBlock.ToolTip>
                            <TextBlock>Press <Bold>ctrl+w</Bold> to close the highlighted window</TextBlock>
                        </TextBlock.ToolTip>
                        <Bold>ctrl+w</Bold> to close a window
                    </TextBlock>
                    <TextBlock FontSize="10" Foreground="{DynamicResource PrimaryTextBrush}">
                        <TextBlock.ToolTip>
                            <TextBlock>Press <Bold>esc</Bold> to dismiss the Switcheroo overlay</TextBlock>
                        </TextBlock.ToolTip>
                        <Bold>esc</Bold> to dismiss switcheroo
                    </TextBlock>
                </StackPanel>
            </DockPanel>
            <Grid DockPanel.Dock="Top" PreviewMouseDown="SearchBoxContainer_PreviewMouseDown">
                <TextBox Name="tb" Padding="5" VerticalAlignment="Top" TextChanged="TextChanged" FontSize="15"
                         VerticalContentAlignment="Center" Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}">
                    <TextBox.InputBindings>
                        <!-- For now, leave these here.  Would it be better to route them upward? -->
                        <KeyBinding Command="local:MainWindow.ScrollListUpCommand" Key="Up" />
                        <KeyBinding Command="local:MainWindow.ScrollListDownCommand" Key="Down" />
                        <KeyBinding Command="local:MainWindow.ScrollListUpCommand" Key="Tab" Modifiers="Shift" />
                        <KeyBinding Command="local:MainWindow.ScrollListDownCommand" Key="Tab" />
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Margin="0,0,10,0" Width="15" HorizontalAlignment="Right" TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18" FontWeight="Bold" Opacity="0.4"
                           PreviewMouseDown="ShowHelpTextBlock_OnPreviewMouseDown"
                           Name="ShowHelpTextBlock" Cursor="Hand" Foreground="{DynamicResource HelpIconBrush}">
                    <TextBlock.Text>?</TextBlock.Text>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.150" Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.150" Storyboard.TargetProperty="Opacity"
                                                         To="0.4" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Grid>

            <Grid Name="ColumnsGrid" DockPanel.Dock="Bottom" Margin="0,0,0,0">
                <Grid.Resources>
                    <local:HighlightStateConverter x:Key="HighlightStateConverter"/>

                    <Style x:Key="CtxBtnStyle" TargetType="Button">
                        <Setter Property="Width" Value="24"/>
                        <Setter Property="Height" Value="24"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#888"/>
                                            <Setter TargetName="Bd" Property="Background" Value="#22888888"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <!-- Active State Trigger -->
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource HighlightStateConverter}">
                                        <!-- 1. The Button Tag (e.g. "Red") -->
                                        <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                        <!-- 2. The Brush Property (Triggers update when color changes) -->
                                        <Binding Path="HighlightBackgroundBrush" />
                                        <!-- 3. The Marker Property (Triggers update when icon changes) -->
                                        <Binding Path="Marker" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <!-- Visual for Active State: Solid Border + Slight Background -->
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTextBrush}"/>
                                <Setter Property="Background" Value="{DynamicResource ControlPressedBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="CtxSeparatorStyle" TargetType="{x:Type Separator}">
                        <Setter Property="Background" Value="{DynamicResource WindowBorderBrush}"/>
                        <Setter Property="Height" Value="1"/>
                        <Setter Property="Margin" Value="0,2,0,2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Separator}">
                                    <Border Background="{TemplateBinding Background}" Height="{TemplateBinding Height}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <ContextMenu x:Key="ListBoxItemContextMenu" KeyDown="ContextMenu_KeyDown" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource ControlBackgroundBrush}">
                        <ContextMenu.Template>
                            <ControlTemplate TargetType="ContextMenu">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{DynamicResource WindowBorderBrush}"
                                        BorderThickness="1"
                                        Padding="2">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                </Border>
                            </ControlTemplate>
                        </ContextMenu.Template>
                        <ContextMenu.Resources>
                            <Style TargetType="Separator" BasedOn="{StaticResource CtxSeparatorStyle}"/>
                        </ContextMenu.Resources>

                        <MenuItem Header="Switch" Click="ContextMenu_Switch" FontWeight="Bold" />
                        <Separator />
                        <MenuItem Header="Close" Click="ContextMenu_Close" />
                        <MenuItem Header="Pin" Click="ContextMenu_PinUnpin" Tag="PinUnpin">
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE718;" FontFamily="Segoe MDL2 Assets" FontSize="14" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator />

                        <!-- Color Row -->
                        <MenuItem StaysOpenOnClick="True">
                             <MenuItem.Template>
                                 <ControlTemplate>
                                     <WrapPanel Orientation="Horizontal" Margin="30,0,5,5"
                                                DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}">

                                        <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Red" ToolTip="Highlight Window Class with Red">
                                            <Ellipse Width="14" Height="14" Fill="Red" Stroke="Black" StrokeThickness="0.5"/>
                                        </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Orange" ToolTip="Highlight Window Class with Orange">
                                             <Ellipse Width="14" Height="14" Fill="Orange" Stroke="Black" StrokeThickness="0.5"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Green" ToolTip="Highlight Window Class with Green">
                                             <Ellipse Width="14" Height="14" Fill="Green" Stroke="Black" StrokeThickness="0.5"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Blue" ToolTip="Highlight Window Class with Blue">
                                             <Ellipse Width="14" Height="14" Fill="Blue" Stroke="Black" StrokeThickness="0.5"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Purple" ToolTip="Highlight Window Class with Purple">
                                             <Ellipse Width="14" Height="14" Fill="Purple" Stroke="Black" StrokeThickness="0.5"/>
                                         </Button>
                                     </WrapPanel>
                                 </ControlTemplate>
                             </MenuItem.Template>
                        </MenuItem>

                        <!-- Symbol Row -->
                        <MenuItem StaysOpenOnClick="True">
                             <MenuItem.Template>
                                 <ControlTemplate>
                                     <WrapPanel Orientation="Horizontal" Margin="30,0,5,5"
                                                DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}">
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Flag" ToolTip="Highlight Window Class with Flag">
                                             <emoji:TextBlock Text="ðŸš©" FontSize="14"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Star" ToolTip="Highlight Window Class with Star">
                                             <emoji:TextBlock Text="â­" FontSize="14"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Warn" ToolTip="Highlight Window Class with Warning">
                                             <emoji:TextBlock Text="âš ï¸" FontSize="14"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_Highlight_Change" Tag="Fire" ToolTip="Highlight Window Class with Fire">
                                             <emoji:TextBlock Text="ðŸ”¥" FontSize="14"/>
                                         </Button>
                                         <Button Style="{StaticResource CtxBtnStyle}" Click="ContextMenu_HighlightConfigure" ToolTip="Configure">
                                             <emoji:TextBlock Text="âš™ï¸" FontSize="14"/>
                                         </Button>
                                     </WrapPanel>
                                 </ControlTemplate>
                             </MenuItem.Template>
                        </MenuItem>

                        <Separator />
                        <MenuItem Header="Copy Window Title" Click="ContextMenu_CopyWindowTitle" />
                        <MenuItem Header="Open File Location" Click="ContextMenu_OpenFileLocation" />
                    </ContextMenu>

                    <!--
                        ITEM CONTAINER STYLE:
                        Handles the BORDER and SELECTION background (Theme Blue).
                        Also handles Mouse Hover borders.
                    -->
                    <Style x:Key="WindowItemContainerStyle" TargetType="{x:Type ListBoxItem}">
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="Transparent"/>

                        <Setter Property="ContextMenu" Value="{StaticResource ListBoxItemContextMenu}" />
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick" />
                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ListBoxItem_PreviewMouseLeftButtonUp" />
                        <EventSetter Event="PreviewMouseDown" Handler="ListBoxItem_PreviewMouseDown" />
                        <EventSetter Event="ContextMenuOpening" Handler="ListBoxItem_ContextMenuOpening" />

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}"
                                            SnapsToDevicePixels="true">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <!-- 1. MOUSE HOVER: Theme Border + Theme Background -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource WindowItemHoverBackgroundBrush}" />
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource WindowItemHoverBorderBrush}" />
                                        </MultiTrigger>

                                        <!-- 2. SELECTED (Active): Theme Border + Theme Background -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True" />
                                                <Condition Property="Selector.IsSelectionActive" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource WindowItemSelectedBorderBrush}" />
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource WindowItemSelectedBackgroundBrush}" />
                                        </MultiTrigger>

                                        <!-- 3. SELECTED (Inactive): Theme Border + Theme Background -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True" />
                                                <Condition Property="Selector.IsSelectionActive" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource WindowItemSelectedBorderBrush}" />
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource WindowItemSelectedInactiveBackgroundBrush}" />
                                        </MultiTrigger>

                                        <!-- 4. DISABLED -->
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="ColumnListBoxStyle" TargetType="{x:Type core:PerformanceListBox}">
                        <Setter Property="ItemContainerStyle" Value="{StaticResource WindowItemContainerStyle}" />
                        <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
                        <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
                        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
                        <Setter Property="SelectionMode" Value="Extended"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="MinWidth" Value="150"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/> 
                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                        <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    </Style>

                    <!-- 
                        DATA TEMPLATE:
                        Handles the USER HIGHLIGHT (e.g. Red Background).
                        This background sits *inside* the container border.
                    -->
                    <DataTemplate x:Key="WindowItemTemplate">
                        <Grid>
                            <!-- 
                                Highlight Border: 
                                - Shows User Highlight Color.
                                - When selected, it shows the 'Solid' user color.
                            -->
                            <Border x:Name="HighlightBorder"
                                    Background="{Binding HighlightBackgroundBrush}"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    Margin="-1"
                                    SnapsToDevicePixels="True"
                                    IsHitTestVisible="False"/>

                            <!-- Content -->
                            <DockPanel Margin="4">
                                <!-- Right-Aligned Marker -->
                                <emoji:TextBlock DockPanel.Dock="Right"
                                           Text="{Binding Marker}"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"
                                           FontSize="14"/>

                                <!-- Icon -->
                                <Image DockPanel.Dock="Left" Height="32" Width="32" Margin="0,0,6,0">
                                <Image.Source>
                                    <PriorityBinding>
                                        <Binding Path="HWnd" Converter="{StaticResource WindowHandleToIconConverter}" IsAsync="True" />
                                        <Binding Path="HWnd" Converter="{StaticResource WindowHandleToCachedIconConverter}" />
                                    </PriorityBinding>
                                </Image.Source>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="1.0" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBeingClosed}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Duration="0:0:0.150" Storyboard.TargetProperty="Opacity" To="0.5" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <StackPanel VerticalAlignment="Center">
                                <!-- Main Title -->
                                <TextBlock local:FormattedTextAttribute.FormattedText="{Binding Path=FormattedTitle}"
                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                           FontSize="14"
                                           Margin="0,0,0,2">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBeingClosed}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource FadedTextBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Process Title -->
                                <TextBlock local:FormattedTextAttribute.FormattedText="{Binding Path=FormattedProcessTitle}"
                                           FontSize="11" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBeingClosed}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource FadedTextBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                        </Grid>
                        
                        <DataTemplate.Triggers>
                            <!-- 
                                When Selected, switch to the SOLID highlight brush so the user's color 
                                remains visible and strong against the blue selection background.
                            -->
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                <Setter TargetName="HighlightBorder" Property="Background" Value="{Binding HighlightSolidBrush}"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>

                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="ColLeft1" Width="*" />
                    <ColumnDefinition x:Name="ColLeft2" Width="*" />
                    <ColumnDefinition x:Name="ColLeft3" Width="*" />
                    <ColumnDefinition x:Name="ColCenter" Width="*" />
                    <ColumnDefinition x:Name="ColRight" Width="*" />
                </Grid.ColumnDefinitions>

                <core:PerformanceListBox GotFocus="ListBox_GotFocus" Grid.Column="0" Name="ListBoxLeft1" Style="{StaticResource ColumnListBoxStyle}" ItemTemplate="{StaticResource WindowItemTemplate}" />
                <core:PerformanceListBox GotFocus="ListBox_GotFocus" Grid.Column="1" Name="ListBoxLeft2" Style="{StaticResource ColumnListBoxStyle}" ItemTemplate="{StaticResource WindowItemTemplate}" />
                <core:PerformanceListBox GotFocus="ListBox_GotFocus" Grid.Column="2" Name="ListBoxLeft3" Style="{StaticResource ColumnListBoxStyle}" ItemTemplate="{StaticResource WindowItemTemplate}" />
                <core:PerformanceListBox GotFocus="ListBox_GotFocus" Grid.Column="3" Name="ListBoxCenter" Style="{StaticResource ColumnListBoxStyle}" ItemTemplate="{StaticResource WindowItemTemplate}" />
                <core:PerformanceListBox GotFocus="ListBox_GotFocus" Grid.Column="4" Name="ListBoxRight" Style="{StaticResource ColumnListBoxStyle}" ItemTemplate="{StaticResource WindowItemTemplate}" />

            </Grid>
        </DockPanel>
    </Border>
</Window>