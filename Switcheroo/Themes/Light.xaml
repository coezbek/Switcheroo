<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F8F8F8" />
    <SolidColorBrush x:Key="WindowBorderBrush" Color="DarkGray" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="White" />

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="Black" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Gray" />
    <SolidColorBrush x:Key="FadedTextBrush" Color="Silver" />
    <SolidColorBrush x:Key="HelpIconBrush" Color="DarkGray" />

    <!-- Selection/Highlights -->
    <SolidColorBrush x:Key="HighlightBrush" Color="AliceBlue" />
    <SolidColorBrush x:Key="HighlightBorderBrush" Color="#ADD8E6" />
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="#66F0F8FF" /> <!-- AliceBlue with Opacity built-in -->

    <!-- Override System Selection with AliceBlue -->
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#66F0F8FF" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#66F0F8FF" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />
</ResourceDictionary>